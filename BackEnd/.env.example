# Example environment variables for the URL_Shortner project
# Copy this file to .env and replace placeholder values before running the app

# Postgres connection (example): postgres://<user>:<pass>@<host>:<port>/<db>
DATABASE_URL=postgres://postgres:password@127.0.0.1:5432/database

# App settings
PORT=3000
BASE_URL=http://localhost:3000

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h

# bcrypt rounds
SALT_ROUNDS=10

# Logging
LOG_LEVEL=info
